<div id="activate-school-<%= school.id %>-container" style="<%= !school.active? ? '' : 'display:none;' %> margin-left:14px; float:left;">
  <%= link_to(
    image_tag('unchecked.png', height: 20, width: 20, alt: ''),
    activate_admin_school_path(school),
    method: :put, remote: true
  ) %>
</div>
<div id="inactivate-school-<%= school.id %>-container" style="<%= school.active? ? '' : 'display:none;' %> margin-left:14px; float:left;">
  <%= link_to(
    image_tag('checked.png', height: 20, width: 20, alt: ''),
    inactivate_admin_school_path(school),
    method: :put, remote: true
  ) %>
</div>
